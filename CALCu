<div class="app">
    <header>
        <h1>Calculadora de Integrales</h1>
        <p>Basada en Nerdamer · Integrales indefinidas y definidas</p>
    </header>

    <div class="calculator">

        <!-- Panel de entrada -->
        <div class="panel">
            <h2>Datos de la Integral</h2>

            <label for="function">Función f(x)</label>
            <input type="text" id="function" placeholder="Ej: x^2 + sin(x)">

            <label for="type">Tipo de integral</label>
            <select id="type" onchange="toggleLimits()">
                <option value="indefinite">Indefinida</option>
                <option value="definite">Definida</option>
            </select>

            <div id="limits" style="display:none;">
                <label for="a">Límite inferior (a)</label>
                <input type="number" id="a">

                <label for="b">Límite superior (b)</label>
                <input type="number" id="b">
            </div>

            <button onclick="calculateIntegral()">Calcular Integral</button>
        </div>

        <!-- Panel de resultado -->
        <div class="panel">
            <h2>Resultado</h2>

            <div class="result" id="output">
                <strong>Resultado:</strong>
                <div>Introduce una función para comenzar.</div>
            </div>
        </div>

    </div>

